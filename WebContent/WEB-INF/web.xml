<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>TestResource</web-resource-name>
      <description>All resources in this application are protected.</description>
      <url-pattern>/tests/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
      <role-name>user</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>TestResource</realm-name>
    <form-login-config>
      <form-login-page>/login.jsp</form-login-page>
      <form-error-page>/error_page.jsp</form-error-page>
    </form-login-config>
  </login-config>
  <security-role>
    <role-name>admin</role-name>
  </security-role>
  <security-role>
    <role-name>user</role-name>
  </security-role>
  <resource-ref>
    <res-ref-name>jdbc/database</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <welcome-file-list>
    <welcome-file>tests/main.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>log4jConfiguration</param-name>
    <param-value>WEB-INF/log4j.xml</param-value>
  </context-param>
  <servlet>
    <servlet-name>testPass</servlet-name>
    <jsp-file>/tests/testpass.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>testResult</servlet-name>
    <jsp-file>/tests/result.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>myPage</servlet-name>
    <jsp-file>/tests/myPage.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>registrationPage</servlet-name>
    <jsp-file>/registration.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>testsEdit</servlet-name>
    <jsp-file>/tests/admin/testsEdit.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>modifyTest</servlet-name>
    <jsp-file>/tests/admin/modifyTest.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>usersEdit</servlet-name>
    <jsp-file>/tests/admin/usersEdit.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>error</servlet-name>
    <jsp-file>/error_page.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>testPass</servlet-name>
    <url-pattern>/tests/testPass</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>testResult</servlet-name>
    <url-pattern>/tests/testResult</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>myPage</servlet-name>
    <url-pattern>/tests/myPage</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>registrationPage</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>testsEdit</servlet-name>
    <url-pattern>/tests/admin/testsEdit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>modifyTest</servlet-name>
    <url-pattern>/tests/admin/modifyTest</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>usersEdit</servlet-name>
    <url-pattern>/tests/admin/usersEdit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>error</servlet-name>
    <url-pattern>/error</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>
  <filter>
    <filter-name>CommandAccessFilter</filter-name>
    <filter-class>
	ua.nure.efimov.summarytask4.filter.CommandAccessFilter</filter-class>
    <init-param>
      <param-name>admin</param-name>
      <param-value>usersControl testsModify</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CommandAccessFilter</filter-name>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/error_page.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/error_page.jsp</location>
  </error-page>
</web-app>